{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2017",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts"]
}
